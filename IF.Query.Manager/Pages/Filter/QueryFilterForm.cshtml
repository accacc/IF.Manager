@page
@model IF.Manager.Query.Pages.Filter.QueryFilterModel


@{
    Layout = "_ModalLayout";
    var ops = Html.GetEnumSelectList<IF.Manager.Contracts.Enum.QueryConditionOperator>();

    foreach (var op in ops)
    {
        if (op.Value == ((int)Model.Form.ConditionOperator).ToString())
        {
            op.Selected = true;
        }
    }

}



        <form class="form-inline">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">

                        <label for="ConditionOperator">Operator</label>                        
                        @Html.DropDownList($"Form.ConditionOperator",ops , "Select", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    <table class="table table-striped table-sm" id="EmptyFormItem">
                        <thead>
                            <tr>
                                <th>Property</th>
                                <th>Condition</th>
                                <th>Value</th>
                                <th>Form Parameter</th>
                                <th>Page Parameter</th>
                                <th>Delete</th>
                            </tr>
                        </thead>

                        @for (int i = 0; i < Model.Form.Items.Count; i++)
                        {
                            await Html.RenderPartialAsync("_QueryFilterFormItem", Model.Form.Items[i]);
                        }

                    </table>

                </div>
            </div>
            <div class="row">
                <div class="col-md-6">

                    <a class="btn btn-primary"
                       href="@Url.Page("/Filter/QueryFilterForm","EmptyFormItemPartial",new { Id = Model.Form.QueryId })"
                       if-ajax="true"
                       if-ajax-method="get"
                       if-ajax-insertion-mode="after"
                       if-ajax-update-id="EmptyFormItem">
                        +
                    </a>
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary"
                            if-ajax-action="@Url.Page("/Filter/QueryFilterForm",new { Id = Model.Form.QueryId })"
                            if-ajax-form-submit="true"
                            if-ajax-method="post"
                            if-ajax-close-modal-on-success="true"
                            if-ajax-on-success-refresh="true"
                            if-ajax-update-id="QueryListDiv">
                        Kaydet
                    </button>
                </div>
            </div>



            @Html.HiddenFor(m => m.Form.QueryId)
        </form>




