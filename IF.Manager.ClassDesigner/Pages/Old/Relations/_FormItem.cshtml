@model IF.Manager.Service.Model.IFCustomClassRelation

@{
    Layout = null;
    List<SelectListItem> classes = ViewData["classes"] as List<SelectListItem>;
    var index = Guid.NewGuid();
    ViewData["Index"] = index;
}

<tr>

    <td>
        <div class="form-group">
           
                @Html.DropDownList($"Form[{index}].RelatedIFCustomClassId", classes, "Select", new { @class = "form-control" })
        </div>
    </td>
    <td>
        <div class="form-group">
          
                @Html.DropDownList($"Form[{index}].RelationType", Html.GetEnumSelectList<IF.Manager.Contracts.Enum.ClassRelationType>(), "Select", new { @class = "form-control" })
        </div>
    </td>
   
    <td>
        <div class="form-group">

            <input type="text" name="Form.[@index].Name" value="@Model.Name" class="form-control" />
        </div>
    </td>
    <td>
        <input type="hidden" name="Form.Index" value="@index" />
        <input type="hidden" name="Form[@index].Id" value="@Model.Id" />
    </td>

</tr>


