@model List<IF.Manager.Contracts.Dto.EntityGroupDto>

@{ Layout = null;}


    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-success"
               href="@Url.Page("/Group/GroupForm","Add")"
               if-ajax="true"
               if-ajax-method="get"
               if-ajax-insertion-mode="replace"
               if-ajax-show-dialog="true"
               if-ajax-modal-id="@Guid.NewGuid()">
                Add
            </a>
        </div>
    </div>

<table class="table table-striped table-sm">
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Prefix
        </th>
        <th>
            Düzenle
        </th>
    </tr>
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prefix)
                </td>
                <td>
                    <a class="btn btn-primary"
                       href="@Url.Page("/Group/GroupForm","Update",new { Id = item.Id})"
                       if-ajax="true"
                       if-ajax-method="get"
                       if-ajax-mode="replace"
                       if-ajax-show-dialog="true"
                       if-ajax-modal-id="@Guid.NewGuid()">
                        Edit
                    </a>
                </td>                
            </tr>
        }
    }
    else
    {
        @:Veri bulunamadı, Lütfen Kriter seçiniz
    }
</table>

