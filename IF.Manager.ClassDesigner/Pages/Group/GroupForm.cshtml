@page
@model IF.Manager.Entity.Pages.Group.GroupFormModel

@{
    Layout = "_ModalLayout";
}


    <form>
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Name">Name</label>
                    @Html.TextBoxFor(m => m.Form.Name, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Prefix">Prefix</label>
                    @Html.TextBoxFor(m => m.Form.Prefix, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary"
                        @{
                            var handler = "Add";

                            if(this.Model.Form.Id>0)
                            {
                                handler = "Update";
                            }

                        }
                        
                        if-ajax-action = "@Url.Page("/Group/GroupForm",handler)"
                        if-ajax-form-submit="true"
                        if-ajax-method="post"
                        if-ajax-close-modal-on-success="true"
                        if-ajax-update-id="EntityGroupListDiv"
                        >
                    Save
                </button>
            </div>
        </div>
        @Html.HiddenFor(model => model.Form.Id)
    </form>


