@page
@model IF.Manager.ClassDesigner.Pages.Mapper.ClassMapperFormModel

@{
    Layout = "_ModalLayout";
    List<SelectListItem> types = ViewData["types"] as List<SelectListItem>;
}


<form>
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Name">Name</label>
                @Html.TextBoxFor(m => m.Form.Name, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Description">Description</label>
                @Html.TextBoxFor(m => m.Form.Description, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="FromClassType">From ClassType</label>
                @Html.DropDownList($"Form.FromClassType", Html.GetEnumSelectList<IF.Manager.Service.Enum.IFClassType>(), "Select", new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="ToClassType">To ClassType</label>
                @Html.DropDownList($"Form.ToClassType", Html.GetEnumSelectList<IF.Manager.Service.Enum.IFClassType>(), "Select", new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary"
                    @{ var handler = "Add"; if (this.Model.Form.Id > 0) { handler = "Update"; } }
                    if-ajax-action="@Url.Page("/Mapper/ClassMapperForm",handler)"
                    if-ajax-form-submit="true"
                    if-ajax-method="post"
                    if-ajax-close-modal-on-success="true"
                    if-ajax-update-id="ClassMapperListDiv">
                Save
            </button>
        </div>
    </div>
    @Html.HiddenFor(model => model.Form.Id)
</form>
