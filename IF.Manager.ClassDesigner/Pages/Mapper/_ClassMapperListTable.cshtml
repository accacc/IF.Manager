@model List<IF.Manager.Service.Model.IFClassMapper>

@{ Layout = null;}

@using IF.Web.Mvc.Extensions

<table class="table table-striped table-sm">
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Düzenle
        </th>
        <th>
            Mapping
        </th>
        <th>Generate</th>

    </tr>
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a class="btn btn-primary"
                       href="@Url.Page("/ClassMapperForm","Update",new { Id = item.Id})"
                       if-ajax="true"
                       if-ajax-method="get"
                       if-ajax-mode="replace"
                       if-ajax-show-dialog="true"
                       if-ajax-modal-id="@Guid.NewGuid()">
                        Edit
                    </a>
                </td>

                @*<td>
                    <a class="btn btn-primary"
                       href="@Url.Page("/ClassMapperListIndex","ClassTreeList",new { Id = item.Id })"
                       if-ajax="true"
                       if-ajax-method="get"
                       if-ajax-insertion-mode="replace"
                       if-ajax-show-dialog="true"
                       if-ajax-modal-id="ClassTreeListModal">
                        Properties
                    </a>
                </td>

                <td>

                    <a class="btn btn-primary"
                       href="@Url.Page("/ClassMapperListIndex","Generate",new { ClassId = item.Id})"
                       if-ajax="true"
                       if-ajax-method="post"
                       if-ajax-mode="replace"
                       if-ajax-update-id="ClassTreeListModal"
                       if-anti-forgery-token="@Context.GetAntiforgeryToken()">
                        Generate Class
                    </a>
                </td>*@


            </tr>
        }
    }
    else
    {
        @:Veri bulunamadı, Lütfen Kriter seçiniz
    }
</table>

