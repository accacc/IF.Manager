@page
@model IF.Manager.ClassDesigner.Pages.Mapper.Mapping.ClassMappingFormModel


@{
    Layout = "_ModalLayout";

}

<div class="row">
    <div class="col-md-12">
        <form class="form-inline">
            @Html.AntiForgeryToken()



            <table class="table table-striped table-sm" id="EmptyFormItem">
                <thead>
                    <tr>
                        <th>From</th>
                        <th>To</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                @for (int i = 0; i < Model.Form.Count; i++)
                {
                    await Html.RenderPartialAsync("_ClassMappingFormItem", Model.Form[i]);
                }

            </table>


            <div class="row">
                <div class="col-md-4">

                    <a class="btn btn-primary"
                       href="@Url.Page("/Mapper/Mapping/ClassMappingForm","EmptyFormItemPartial",new { ClassMapId = Model.ClassMapId })"
                       if-ajax="true"
                       if-ajax-method="get"
                       if-ajax-insertion-mode="after"
                       if-ajax-extradatafunc="setselectedtreenode()"
                       if-ajax-update-id="EmptyFormItem">
                        +
                    </a>
                </div>


                <div class="col-md-4">

                    <a class="btn btn-primary"
                       href="@Url.Page("/Mapper/Mapping/ClassMappingForm","AutoMapping",new { ClassMapId = Model.ClassMapId })"
                       if-ajax="true"
                       if-ajax-method="get"
                       if-ajax-insertion-mode="replace"
                       if-ajax-extradatafunc="setselectedtreenode()"
                       if-ajax-update-id="ClassMappingFormModal">
                        Auto Map
                    </a>
                </div>

                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary"
                            if-ajax-action="@Url.Page("/Mapper/Mapping/ClassMappingForm",new { Id = Model.ClassMapId })"
                            if-ajax-form-submit="true"
                            if-ajax-method="post"
                            if-ajax-close-modal-on-success="true"
                            if-ajax-on-success-refresh="true"
                            if-ajax-update-id="ClassMapperListDiv">
                        Kaydet
                    </button>
                </div>
            </div>



            @Html.HiddenFor(m => m.ClassMapId)
        </form>
    </div>
</div>
<script>

    function setselectedtreenode() {

        var data = {};
        data.ParentId = 1;
        return data;
    }



</script>