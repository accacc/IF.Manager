@page
@model IF.Manager.Page.Pages.FormFormModel

@{
    Layout = "_ModalLayout";

    List<SelectListItem> Form_layouts = ViewData["Form_layouts"] as List<SelectListItem>;
    List<SelectListItem> models = ViewData["models"] as List<SelectListItem>;
    List<SelectListItem> queries = ViewData["queries"] as List<SelectListItem>;
}


<form>
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="FormLayoutId">Form Layout</label>
                @Html.DropDownList("Form.FormLayoutId", Form_layouts, "Select", new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="IFModelId">Model</label>
                @Html.DropDownList("Form.IFModelId", models, "Select", new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="IFQueryId">Query</label>
                @Html.DropDownList("Form.IFQueryId", queries, "Select", new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Name">Name</label>
                @Html.TextBoxFor(m => m.Form.Name, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Description">Description</label>
                @Html.TextBoxFor(m => m.Form.Description, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary"
                    @{ var handler = "Add"; if (this.Model.Form.Id > 0) { handler = "Update"; } }
                    if-ajax-action="@Url.Page("/Form/FormForm",handler)"
                    if-ajax-form-submit="true"
                    if-ajax-method="post"
                    if-ajax-close-modal-on-success="true"
                    if-ajax-update-id="FormListDiv">
                Save
            </button>
        </div>
    </div>
    @Html.HiddenFor(model => model.Form.Id)
</form>


