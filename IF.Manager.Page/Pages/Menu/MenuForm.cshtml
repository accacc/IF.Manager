@page
@model IF.Manager.Page.Pages.Menu.MenuFormModel
@{
}


@{
    Layout = "_ModalLayout";
    List<SelectListItem> projects = ViewData["projects"] as List<SelectListItem>;
}


    <form>
        @Html.AntiForgeryToken()


        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="IFProjectId">Project</label>
                    @Html.DropDownList("Form.IFProjectId", projects, "Select", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Name">Name</label>
                    @Html.TextBoxFor(m => m.Form.Name, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Description">Description</label>
                    @Html.TextBoxFor(m => m.Form.Description, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary"
                        @{ var handler = "AddMenu"; if (this.Model.Form.Id > 0) { handler = "UpdateMenu"; } }
                        if-ajax-action="@Url.Page("/Menu/MenuForm",handler)"
                        if-ajax-form-submit="true"
                        if-ajax-method="post"
                        @*if-ajax-onsuccess-func="ReloadTree"*@
                        if-ajax-close-modal-on-success="true"
                        if-ajax-update-id="MenuListDiv">
                    Save
                </button>
            </div>
        </div>

        @Html.HiddenFor(model => model.Form.Id)
    </form>



