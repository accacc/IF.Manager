@page
@model IF.Manager.Entity.Pages.Relations.FormModel


@{
    Layout = "_ModalLayout";
}



<div class="row">
    <div class="col-md-12">


        <form class="form-inline">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-12">

                    <table class="table table-striped table-sm" id="EmptyFormItem">
                        <thead>
                            <tr>
                                <th>Entity Type</th>
                                <th>Entity Relation Type</th>
                                <th>Foreign Key</th>
                                <th>Prefix</th>
                            </tr>
                        </thead>
                        @for (int i = 0; i < Model.Form.Count; i++)
                        {
                            await Html.RenderPartialAsync("_FormItem", Model.Form[i]);
                        }

                    </table>

                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <a class="btn btn-primary"
                       href="@Url.Page("/Entity/Relations/Form","EmptyFormItemPartial")"
                       if-ajax="true"
                       if-ajax-method="get"
                       if-ajax-insertion-mode="after"
                       if-ajax-update-id="EmptyFormItem">
                        +
                    </a>
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary"
                            if-ajax-action="@Url.Page("/Entity/Relations/Form")"
                            if-ajax-form-submit="true"
                            if-ajax-method="post"
                            if-ajax-close-modal-on-success="true"                            
                            if-ajax-update-id="EntityListDiv"
                            id="SaveRelationButton"
                            >
                        Kaydet
                    </button>
                </div>
            </div>



            @Html.HiddenFor(m => m.EntityId)
        </form>



    </div>
</div>