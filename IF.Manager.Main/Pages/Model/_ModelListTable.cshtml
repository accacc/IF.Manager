@model List<IF.Manager.Contracts.Dto.ModelDto>

@{ Layout = null;}

<table class="table table-striped table-sm">
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Düzenle
        </th>
        <th>
            Property Manager
        </th>
    </tr>
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a class="btn btn-primary"
                       href="@Url.Page("/Model/ModelForm","Update",new { Id = item.Id})"
                       if-ajax="true"
                       if-ajax-method="get"
                       if-ajax-mode="replace"
                       if-ajax-show-dialog="true"
                       if-ajax-modal-id="@Guid.NewGuid()">
                        Edit
                    </a>
                </td>
                <td>

                    <a type="submit" class="btn btn-primary"
                       href="@Url.Page("/Model/Property/ModelList",new { ModelId = item.Id})"
                       if-ajax="true"
                       if-ajax-mode="replace"
                       if-ajax-method="get"
                       if-ajax-show-dialog="true"
                       @*if-anti-forgery-token="@Context.GetAntiforgeryToken()"*@
                       if-ajax-modal-id="@Guid.NewGuid()">
                        Properties
                    </a>

                </td>
            </tr>
        }
    }
    else
    {
        @:Veri bulunamadı, Lütfen Kriter seçiniz
    }
</table>

