@page
@model IF.Manager.Page.Pages.Action.ActionListIndexModel


<div class="row">
    <div class="col-md-12">
        <a class="btn btn-success"
           href="@Url.Page("ActionForm","Add")"
           if-ajax="true"
           if-ajax-method="get"
           if-ajax-insertion-mode="replace"
           if-ajax-show-dialog="true"
           if-ajax-modal-id="@Guid.NewGuid()">
            Add
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>

<div class="row">
    <div id="ActionListDiv" class="col-md-12">
        @{await Html.RenderPartialAsync("_ActionListTable", Model.ActionList);}
    </div>
</div>
