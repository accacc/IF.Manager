@model List<IF.Manager.Contracts.Model.IFPageNavigation>

@{ Layout = null;}

<table class="table table-striped table-sm">
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Düzenle
        </th>
        
    </tr>
    @if (Model != null && Model.Any())
    {
    @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <a class="btn btn-primary"
               href="@Url.Page("/Menu/MenuForm","UpdateMenu",new { Id = item.Id , IFProjectId = item.IFProjectId})"
               if-ajax="true"
               if-ajax-method="get"
               if-ajax-mode="replace"
               if-ajax-show-dialog="true"
               if-ajax-modal-id="@Guid.NewGuid()">
                Edit
            </a>
        </td>



    </tr>
        }
    }
    else
    {
    @:Veri bulunamadı, Lütfen Kriter seçiniz
    }
</table>

