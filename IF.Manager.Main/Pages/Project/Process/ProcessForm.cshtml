@page
@model IF.Manager.Project.Pages.ProcessFormModel

@{
    Layout = "_ModalLayout";
}


    <form>
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Name">Name</label>
                    @Html.TextBoxFor(m => m.Form.Name, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Prefix">Description</label>
                    @Html.TextAreaFor(m => m.Form.Description, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary"
                        @{ var handler = "Add";  if (this.Model.Form.Id > 0) { handler = "Update"; } }
                        if-ajax-action="@Url.Page("/Project/Process/ProcessForm",handler)"
                        if-ajax-form-submit="true"
                        if-ajax-method="post"
                        id="SaveProcessButton"
                        if-ajax-close-modal-on-success="true"
                        if-ajax-update-id="ProcessListDiv">
                    Save
                </button>
            </div>
        </div>
        @Html.HiddenFor(model => model.Form.Id)
        @Html.HiddenFor(model => model.Form.ProjectId)
    </form>


