@page
@model IF.Manager.Command.Pages.Multi.CommandMultiModel


@{
    Layout = "_ModalLayout";
}

<form class="form-inline">
    @Html.AntiForgeryToken()

   
    <div class="row">
        <div class="col-md-12">

            <table class="table table-striped table-sm" id="EmptyFormItem">
                <thead>
                    <tr>
                        <th>Command</th>
                        <th>Mapper</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                @for (int i = 0; i < Model.Form.Count; i++)
                {
                    await Html.RenderPartialAsync("_CommandMultiFormItem", Model.Form[i]);
                }

            </table>

        </div>
    </div>
    <div class="row">
        <div class="col-md-6">

            <a class="btn btn-primary"
               href="@Url.Page("/Multi/CommandMultiForm","EmptyFormItemPartial",new { Id = Model.CommandId })"
               if-ajax="true"
               if-ajax-method="get"
               if-ajax-insertion-mode="after"
               if-ajax-update-id="EmptyFormItem">
                +
            </a>
        </div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary"
                    if-ajax-action="@Url.Page("/Multi/CommandMultiForm",new { Id = Model.CommandId })"
                    if-ajax-form-submit="true"
                    if-ajax-method="post"
                    if-ajax-close-modal-on-success="true"
                    if-ajax-on-success-refresh="true"
                    if-ajax-update-id="CommandListDiv">
                Kaydet
            </button>
        </div>
    </div>



    @Html.HiddenFor(m => m.CommandId)
</form>




