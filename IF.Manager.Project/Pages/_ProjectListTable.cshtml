@model List<IF.Manager.Contracts.Model.IFProject>
@using IF.Manager.Project

@{ Layout = null;}

<table class="table table-striped table-sm">
    <tr>
       
        <th>
            Name
        </th>

        <th>
            Düzenle
        </th>
        <th>&nbsp;</th>
    </tr>
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <tr>
             
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-primary"
                       href="@Url.Page("/ProjectForm","Update",new { Id = item.Id})"
                       if-ajax="true"
                       if-ajax-method="get"
                       if-ajax-mode="replace"
                       if-ajax-show-dialog="true"
                       if-ajax-modal-id="@Guid.NewGuid()">
                        Edit
                    </a>
                </td>               
            </tr>            
        }
    }
    else
    {
        @:Veri bulunamadı, Lütfen Kriter seçiniz

    }
</table>


