@page
@model IF.Manager.Project.Pages.Solution.SolutionFormModel

@{
    Layout = "_ModalLayout";
}


    <form>
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Name">SolutionName</label>
                    @Html.TextBoxFor(m => m.Form.SolutionName, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Name">Path</label>
                    @Html.TextBoxFor(m => m.Form.Path, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Prefix">Description</label>
                    @Html.TextAreaFor(m => m.Form.Description, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary"
                        @{ var handler = "Add";  if (this.Model.Form.Id > 0) { handler = "Update"; } }
                        if-ajax-action="@Url.Page("/Solution/SolutionForm",handler)"
                        if-ajax-form-submit="true"
                        if-ajax-method="post"
                        if-ajax-close-modal-on-success="true"
                        if-ajax-update-id="SolutionListDiv"
                        id="SaveSolutionButton"
                        >
                    Save
                </button>
            </div>
        </div>
        @Html.HiddenFor(model => model.Form.Id)
    </form>


